<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:padding="16dp">

        <!-- Table Header -->
        <TableRow>
            <TextView
                android:text="Patient ID"
                android:textStyle="bold"
                android:padding="8dp" />
            <TextView
                android:text="Name"
                android:textStyle="bold"
                android:padding="8dp" />
            <TextView
                android:text="Address"
                android:textStyle="bold"
                android:padding="8dp" />

            <TextView
                android:text="Gender"
                android:textStyle="bold"
                android:padding="8dp" />
        </TableRow>

        <!-- Row 1 -->
        <TableRow>
            <TextView
                android:text="101"
                android:padding="8dp" />
            <TextView
                android:text="John"
                android:padding="8dp" />
            <TextView
                android:text="New York"
                android:padding="8dp" />
            <TextView
                android:text="Male"
                android:padding="8dp" />
        </TableRow>

        <!-- Row 2 -->
        <TableRow>
            <TextView
                android:text="102"
                android:padding="8dp" />
            <TextView
                android:text="Mary"

                android:padding="8dp" />
            <TextView
                android:text="Los Angeles"
                android:padding="8dp" />
            <TextView
                android:text="Female"
                android:padding="8dp" />
        </TableRow>

        <!-- Row 3 -->
        <TableRow>
            <TextView
                android:text="103"
                android:padding="8dp" />
            <TextView
                android:text="Alex"
                android:padding="8dp" />
            <TextView
                android:text="Chicago"
                android:padding="8dp" />
            <TextView
                android:text="Male"
                android:padding="8dp" />
        </TableRow>

    </TableLayout>
</ScrollView>